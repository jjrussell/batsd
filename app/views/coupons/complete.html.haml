        body {
          background-color: #f0f0f0;
          font-size: 100%/16px;
          font-family: "Helvetica", Arial, Helvetica, sans-serif;
          font-weight: normal;
        }

        .button-wrapper .button {
          background: url('/images/api/gray_button_tile.png') repeat-x 0 0 !important;
        }

        h3 {
          text-align: center;
          margin-top: 20px;
        }

        .container {
          border-bottom: 1px solid #888;
          box-shadow: inset 0 1px 0 #fff;
          padding: 10px;
        }

        #privacy a {
          font-size: 75%;
          color: #004E09;
        }

        #privacy {
          float: left;
          margin-left: 5%;
          text-decoration: underline;
        }

        #adsby {
          margin-top: 2px;
          float: right;
          margin-right: 5%;
        }

        span.small {
          color: #999;
          display: block;
          font-size: 85%;
          margin-top: 5px;
        }

        .ui-joy-mask {
          background: rgba(79,79,79, .9);
          position: absolute;
          top: 0;
          left: 0;
          height: 100%;
          width: 100%;
          z-index: 99;
        }

        .ui-joy-panel {
          background: #f4f4f4;
          border-radius: 4px;
          box-shadow: 0 0 4px rgba(0,0,0, .5);
          font-family: "Helvetica Neue", "Helvetica", Arial, sans-serif;
          margin: 15px auto;
          position: relative;
          width: 90%;
          z-index: 100;
        }

        .ui-joy-panel .title-header {
          margin-top: 20px;
        }

        .ui-joy-panel .header .heading {
          background: url('/images/api/header_tile.png') repeat-x 0 0 !important;
        }

        .ui-joy-panel .grey-box {
          background: rgb(240,240,240);
          background: -moz-linear-gradient(top, rgba(240,240,240,1) 0%, rgba(233,233,233,1) 37%, rgba(227,227,227,1) 74%, rgba(222,222,222,1) 100%);
          background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(240,240,240,1)), color-stop(37%,rgba(233,233,233,1)), color-stop(74%,rgba(227,227,227,1)), color-stop(100%,rgba(222,222,222,1)));
          background: -webkit-linear-gradient(top, rgba(240,240,240,1) 0%,rgba(233,233,233,1) 37%,rgba(227,227,227,1) 74%,rgba(222,222,222,1) 100%);
          background: -o-linear-gradient(top, rgba(240,240,240,1) 0%,rgba(233,233,233,1) 37%,rgba(227,227,227,1) 74%,rgba(222,222,222,1) 100%);
          background: -ms-linear-gradient(top, rgba(240,240,240,1) 0%,rgba(233,233,233,1) 37%,rgba(227,227,227,1) 74%,rgba(222,222,222,1) 100%);
          background: linear-gradient(top, rgba(240,240,240,1) 0%,rgba(233,233,233,1) 37%,rgba(227,227,227,1) 74%,rgba(222,222,222,1) 100%);
          filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#f0f0f0', endColorstr='#dedede',GradientType=0 );
          border-top-left-radius: 3px;
          border-top-right-radius: 3px;
          box-shadow: inset 0 -1px 0 #bbb;
        }

        .ui-joy-panel .instructions {
          box-shadow: inset 0 1px 0 #fff;
          color: #6e6e6e;
          padding: 25px 15px 0;
          text-shadow: 0 1px 0 #fff;
        }

        .ui-joy-panel .instructions span {
          display: block;
          font-size: 70%;
        }

        .reward-button {
          background: -moz-linear-gradient(top, rgba(255,192,0,1) 0%, rgba(255,183,0,1) 36%, rgba(255,156,0,1) 71%, rgba(255,141,0,1) 100%);
          background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(255,192,0,1)), color-stop(36%,rgba(255,183,0,1)), color-stop(71%,rgba(255,156,0,1)), color-stop(100%,rgba(255,141,0,1)));
          background: -webkit-linear-gradient(top, rgba(255,192,0,1) 0%,rgba(255,183,0,1) 36%,rgba(255,156,0,1) 71%,rgba(255,141,0,1) 100%);
          background: -o-linear-gradient(top, rgba(255,192,0,1) 0%,rgba(255,183,0,1) 36%,rgba(255,156,0,1) 71%,rgba(255,141,0,1) 100%);
          background: -ms-linear-gradient(top, rgba(255,192,0,1) 0%,rgba(255,183,0,1) 36%,rgba(255,156,0,1) 71%,rgba(255,141,0,1) 100%);
          background: linear-gradient(top, rgba(255,192,0,1) 0%,rgba(255,183,0,1) 36%,rgba(255,156,0,1) 71%,rgba(255,141,0,1) 100%);
          -moz-box-sizing: border-box;
          -webkit-box-sizing: border-box;
          box-sizing: border-box;
          border: 1px solid #b37201;
          border-radius: 4px;
          box-shadow: inset 0 1px 0 #fff736, 0 1px 0 rgba(0,0,0, .1);
          padding: 7px;
          width:8%;
          margin-left:auto;
          margin-right:auto;
          margin-top: 10px;
          margin-bottom: 10px;
        }

        .reward-button a {
          color: #fff;
          display: block;
          font-size: 100%;
          font-weight: bold;
          text-align: center;
          text-decoration: none;
          text-shadow: 0 -1px 0 #cc7f26;
        }

        .grey-box.highlight {
          border: 1px solid #c1c1c1;
          border-radius: 4px;
          box-shadow: none;
          font-weight: bold;
        }

        .grey-box.highlight .padit {
          padding: 12px 10px 12px 0;
          margin-left: 10px;
        }

        .ui-joy-panel .grey-box .heading {
          color: #414141;
          font-size: 100%;
          font-weight: 700;
          margin-left: 5px;
          text-shadow: 0 1px 0 #f9f9f9;
        }

        .padit {
          padding: 5px 6px;
        }

        .blurb {
          color: #555;
          font-size: 84%;
          line-height: 100%;
          margin: 5px 0;
        }

        div.ui-joy-button {
        }

        div.ui-joy-button.disabled a {
          cursor: default;
          opacity: .5;
        }

        div.ui-joy-button a.text-left {
          text-align: left;
        }

        div.ui-joy-button a.text-right {
          text-align: right;
        }

        div.ui-joy-button a.text-center {
          text-align: center;
        }

        div.ui-joy-button a {
          display: block;
          position: relative;
          text-decoration: none;
          margin: 0;
          padding: 6px 8px 7px 8px;
        }

        div.ui-joy-button.padfix a {
          padding: 7px 8px 5px 8px;
        }

        div.ui-joy-button a input {
          background: none;
          padding: 0;
          margin: 0;
          border: 0;
          font: bold 12px/100% "Helvetica", Arial, Helvetica, sans-serif;
          padding-bottom: 2px;
        }

        div.ui-joy-button a.icon {
          padding-left: 26px !important;
        }

        div.ui-joy-button a.icon div.img {
          width: 20px;
          height: 20px;
          position: absolute;
          left: 5px;
          top: 4px;
          z-index: 2;
        }

        div.ui-joy-button a.icon div.img img {
          width: 20px;
          height: 20px;
        }

        div.ui-joy-button a.icon div.img img.icon-check  {
          background: url(../../css/images/icons.png) no-repeat -17px -17px;
        }

        div.ui-joy-button a.image {
          padding: 0;
          margin: 0;
        }

        /**
         * themes
         */
        div.ui-joy-button.tapjoy-inset {
          margin-top: 20px;
          color: white;
          width: 30%;
          margin-left: auto;
          margin-right: auto;
          border: 1px solid black;
          box-shadow: inset 0 1px 0 #bbbbbb, 0 1px 0 #cecece;
          border-radius: 6px;
          background: -moz-linear-gradient(top, #a6a6a6 0%, #9a9a9a 25%, #8d8d8d 50%, #808080 75%, #737373 100%);
          background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #a6a6a6), color-stop(25%,#9a9a9a), color-stop(50%,#8d8d8d), color-stop(75%,#808080), color-stop(100%,#737373));
          background: -webkit-linear-gradient(top, #a6a6a6 0%, #9a9a9a 25%, #8d8d8d 50%, #808080 75%, #737373 100%);
          background: -o-linear-gradient(top, #a6a6a6 0%, #9a9a9a 25%, #8d8d8d 50%, #808080 75%, #737373 100%);
          background: -ms-linear-gradient(top, #a6a6a6 0%, #9a9a9a 25%, #8d8d8d 50%, #808080 75%, #737373 100%);
        }

        div.ui-joy-button.tapjoy-inset a input {
          color: #fff;
          text-shadow: 0 1px 0 #790404;
        }

        div.ui-joy-button.tapjoy-inset.hover {
          opacity: .9;
        }

        div.ui-joy-button.tapjoy-inset.active {
          background: -moz-linear-gradient(top, rgba(138,26,26,1) 0%, rgba(133,23,23,1) 25%, rgba(122,18,19,1) 50%, rgba(116,16,17,1) 75%, rgba(108,12,13,1) 100%);
          background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(138,26,26,1)), color-stop(25%,rgba(133,23,23,1)), color-stop(50%,rgba(122,18,19,1)), color-stop(75%,rgba(116,16,17,1)), color-stop(100%,rgba(108,12,13,1)));
          background: -webkit-linear-gradient(top, rgba(138,26,26,1) 0%,rgba(133,23,23,1) 25%,rgba(122,18,19,1) 50%,rgba(116,16,17,1) 75%,rgba(108,12,13,1) 100%);
          background: -o-linear-gradient(top, rgba(138,26,26,1) 0%,rgba(133,23,23,1) 25%,rgba(122,18,19,1) 50%,rgba(116,16,17,1) 75%,rgba(108,12,13,1) 100%);
          background: -ms-linear-gradient(top, rgba(138,26,26,1) 0%,rgba(133,23,23,1) 25%,rgba(122,18,19,1) 50%,rgba(116,16,17,1) 75%,rgba(108,12,13,1) 100%);
          box-shadow: inset 0 1px 0 #790404, 0 1px 0 #c84245;
          border: 1px solid #790404;
        }

        #adsby { margin-top: 2px; float: right; margin-right: 5%; }
        #adsby span { display: inline-block; font-size: 13px; text-decoration: none; vertical-align: top; height: 20px; }
        #adsby #logo { background: transparent url(data:image/png;base64,) no-repeat; }
        #adsby #logo { display: inline-block; width: 39px; height: 20px; }


