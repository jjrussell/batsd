.ui-joy-mask
  #panel.ui-joy-panel.coupon
    .header
      .grey-box.highlight
        .padit
          .heading
            You've earned #{@currency.get_visual_reward_amount(@offer, params[:display_multiplier])} #{@currency.name}
            in #{@publisher_app.name} by completing #{@coupon.name}!
          %h3 Success
          .reward-button
            %a #{@currency.get_visual_reward_amount(@offer, params[:display_multiplier])}
            %a #{@currency.name}
          .instructions
            %p.blurb.center
              The next time you check your inbox there will a coupon for #{@coupon.name}. You need to use the coupon
              in order to receive your currency of #{@currency.get_visual_reward_amount(@offer, params[:display_multiplier])} #{@currency.name}.
              #{@coupon.fine_print}.

  #privacy
    = link_to(t('text.shared.privacy'), "#{WEBSITE_URL}/site/privacy_mobile?language_code=#{I18n.locale}")

  #adsby
    %span= t('text.shared.ads_by')
    #logo

    %style{ :type => 'text/css' }
      :plain
