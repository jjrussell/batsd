- @page_title = 'Apps'

= render :partial => 'apps/apps', :object => current_partner_apps
= render :partial => 'apps/actions', :locals => {:app => @app}

#apps_main
  - unless @app.nil?
    .app-thumb
      .icon
        = image_tag(@app.primary_offer.get_icon_url, :size => '57x57', :alt => 'icon')
    = @app.name
    - form_for @app do |f|
      Balance
      = #f.text_field :balance
      Daily Budget
      = #f.text_field :daily_budget
      Bid
      = #f.text_field :bid
      Tapjoy Enabled
      = #f.text_field :tapjoy_enabled
      Campaign Status
      = #f.select :campaign_status
      = link_to 'Add funds', add_funds_billing_path

  = @offer.name
  - form_for @offer, :url => app_offer_path do |f|
    %table.app{:cellpadding => 0, :cellspacing => 0, :border => 1}
      %tbody
        %tr
          %th Name:
          %td
            = f.text_field :name, :size => 50
            - if @offer.errors.on :name
              = error_message_on @offer, :name
        %tr
          %th Description:
          %td
            = f.text_area :description, :size => "50x15"
            - if @offer.errors.on :description
              = error_message_on @offer, :description
    = f.submit 'Update'
