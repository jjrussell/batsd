#jqt
  #recommended.current
    .top_nav_bar.toolbar
      .nav_content
        .right
          = mail_to 'support@tapjoy.com', 'Support', :id => 'support'
        .right
          = link_to 'My Account', "#my_account", :class => "flip"  
    .container.vertical-scroll
      .scroller.with-scrollbar
        .page
          .logo
            .slide_nav
              .slider_wrapper.right 
                .slider.slider_active.slider_right
                  %span.title.small
                    More Games
                .slide_arrow_wrapper.bottom_arrow
                  .slide_arrow
              .slider_btn.left
                .slider.slider_left
                  %span.title
                    =link_to "My Apps", games_root_path
          .content
            %ul
              - @editors_picks.each do |pick|
                %li.offer_item.clearfix
                  .offer_image
                    = image_tag pick.offer.get_icon_url, :size => '57x57'
                  .offer_text
                    .offer_title.title
                      = pick.offer.name
                    .offer_info
                      - if %w(App ActionOffer).include?(pick.offer.item_type)
                        .offer_meta
                          %span.offer_category
                            = pick.offer.item.categories.first.to_s.titleize
                          %span.offer_rating{ :rating => pick.offer.item.user_rating }
                        .offer_description
                          = pick.description
                        .offer_button
                          %a{:href => pick.offer.url }
                            .button.grey
                              %span.amount
                                = number_to_currency(pick.offer.price/100)
                              %span.offer_url
                                = link_to 'Get it!', pick.offer.url


  #my_account.tan
    .container.vertical-scroll
      .scroller.with-scrollbar
        .page
          .logo
            .slide_nav.left
              .left
                .slide_arrow_wrapper.left_arrow
                  .slide_arrow
              .slider.slider_active.slider_left.left
                .title
                  = link_to 'Back', "#", :class => "back" 
          .content
            = link_to "Logout", games_logout_path


#loader.dialog_wrapper.hide
  .dialog
    .dialog_title
      Loading
    .dialog_image

- content_for :page_javascript do
  - if Rails.env.production?
    :plain
      $(window).load(function() {
        var jQT = new $.jQTouch({
          slideSelector: '#jqt .slide_nav',
        });
      });
  - else
    :plain
      $(window).load(function() {
        var jQT = new $.jQTouch({
          slideSelector: '#jqt .slide_nav',
        });
        var linked_games = TJG.utils.getParam("no_games");
        if (linked_games.indexOf("true") != -1) {
          $("#register_device").fadeIn(350); 
        }          
      });