%ul
  - cached_app_list.each do |cached_app|
    %li.offer_item.clearfix
      .offer_image
        = image_tag cached_app.icon_url
      .offer_text
        .offer_title.title
          = cached_app.name
        .offer_info
          .offer_meta
            %span.offer_category
              = cached_app.primary_category.try(:titleize)
            %span.offer_rating{ :rating => cached_app.user_rating }
          .offer_description
            = cached_app.description
          .offer_button.more_games
            %a{:href => cached_app.url }
              .button.grey
                - if cached_app.price == 0
                  %span.amount.free
                    Free!
                - else
                  %span.amount
                    = number_to_currency(cached_app.price / 100.0)
                %span.get_it
                  Get it!
