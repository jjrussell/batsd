#jqt
  #reset_password.tan.account.current 
    .container
      .page.no_top_nav_bar
        .logo
        .content.narrow.pad
          .header_wrapper
            .title_2
              Reset Password 
            .content_box_top_arrow_wrapper
              .content_box_top_arrow
            .content_box_wrapper
              .content_box.clearfix
                %div
                  - if @gamer
                    %p You should receive an email with instructions to reset your password in the next few minutes.
                    %p
                      If you are still having problems logging in, you can
                      = link_to("request another password reset email", new_games_password_reset_path)
                      or email
                      = mail_to("mobilehelp@tapjoygames.com") + "."
                  - else
                    %p Enter the email address associated with your account and we will send you a link to reset your password.
                    - form_tag(games_password_resets_path) do
                      .field
                        = label_tag(:email)
                        = email_field_tag(:email)
                      .field
                        = submit_tag('Submit', :class => 'button lt_blue')
                      %p
                        - [:error].each do |key|
                          - unless flash[key].blank?
                            .account_error
                              = flash[key]
                                                      