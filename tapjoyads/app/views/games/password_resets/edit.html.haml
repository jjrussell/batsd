#jqt
  #update_password.account.current
    .nav
      .nav_container.clearfix
        %a{ :href => games_root_path, :class => "slideright" }
          .logo
    #static.container
      .content.narrow.pad
        .content_box
          .header_wrapper
            .title_2
              Update Password
          %div
            - form_for(:gamer, @gamer, :url => { :action => :update }, :html => { :method => :put }) do |f|
              .field
                = f.label :password, 'New Password'
                = f.password_field :password
              .field
                = f.label :password_confirmation, 'Confirm Password'
                = f.password_field :password_confirmation
              .field
                = submit_tag('Submit', :class => 'button grey')
              .field
                = error_message_on @gamer, :password
            .formError.hide
              .account_error
    = render :partial => 'games/homepage/footer'

- content_for :page_javascript do
  :plain
    $(window).load(function() {
      $('form').submit(function(e){
        $(".formError").hide();
        var inputs, pass, values = {};
        inputs = $('form :input[type=password]');
        inputs.each(function() {
          if (this.type == 'checkbox' || this.type == 'radio') {
            values[this.name] = $(this).attr("checked");
          }
          else {
            values[this.name] = $(this).val();
          }
          pass = values['gamer[password]'];
          if( pass == '' ) {
            $(".account_error").html('Please enter a password');
            $(".formError").show();
            e.preventDefault();
          }
        });
      });
    });
