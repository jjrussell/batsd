:plain
  <ul class="slats with-icons">
    <% for(var i=0, ii=OfferArray.length; i<ii; i++) { %>
      <% if (!OfferArray[i].IconURL || !OfferArray[i].Name) { continue; } %>
      <li class="slat clearfix line chrome">
        <div class="hd left size1of4 game-icon">
          <img src="<%= OfferArray[i].IconURL %>" />
        </div>
        <div class="bd left size1of2">
          <div class="title elip">
            <%= OfferArray[i].Name %>
          </div>
          <div class="app-summary clearfix">
            <div class="rank">
              #{image_tag("games/thumbs-up.png")}
            </div>
            <div class="friends">
              #{image_tag("games/social.png")}
            </div>
          </div>
          <div class="highlight-green">
            <%= i18n.t("games.amount_and_currency", {amount: OfferArray[i].Amount, currency: CurrencyName}) %>
          </div>
        </div>
        <div class="ft right rel size1of4 lastUnit">
          <div class="ui-list-arrow">
            <div class="ui-list-action-label">
              <%= i18n.t("shared.collect") %>
            </div>
          </div>
        </div>
      </li>
    <% } %>
  </ul>
