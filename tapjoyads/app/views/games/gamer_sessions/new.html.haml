#jqt
  #login.current.tan 
    %div.container
      %div
        .page.no_top_nav_bar
          %div
            .logo
            .content.narrow
              #earn_paper
                #earn_content
                  %div.how_works.right.earn_title
                    %a.swap{ :href => '#how_works' }
                      How does it work?
                  #sign_up.sign_up.left.earn_title
                    %a{ :href => '#' }
                      %span.underline
                        Sign up now!
                        %span.underline_blue
                        
              #login_form
                %h1
                  Existing Users Login
                .content_box_top_arrow
                .content_box
                  - form_for([ :games, @gamer_session ]) do |f|
                    .field
                      = f.label :email
                      = f.text_field :email
                      = error_message_on @gamer_session, :email
                    .field
                      = f.label :password
                      = f.password_field :password
                      = error_message_on @gamer_session, :password
                    .field
                      = f.submit 'Login!'
                      = link_to('Forgot password?', new_games_password_reset_path)  
              
              #sign_up_form

