- if error_message_on(@gamer_session, :password).present? || error_message_on(@gamer_session, :email).present?
  - @login_form_class_name = "show"
  - content_for :page_javascript do
    :plain
      $(".form-error").css({opacity: '1', visibility: 'visible !important'});

- if params[:email]
  - @login_form_class_name = "show"

#login-form{ :class => @login_form_class_name }
  .bd.clearfix
    - unless params[:email]
      = form_tag "#{games_gamer_sessions_path(:path => params[:path], :data => params[:data])}", :method => :post, :id => 'log-in-with-facebook-form', :authenticity_token => "#{form_authenticity_token}"

    - form_for([ :games, @gamer_session ], :url => games_login_path) do |f|
      - if params[:data].present?
        = hidden_field_tag :data, params[:data]
      - if params[:path].present?
        = hidden_field_tag :path, params[:path]
      .title
        = t("text.games.log_in_tapjoy")

      - unless params[:email]
        .log-in-with-facebook{ 'data-submit-form-id' => 'log-in-with-facebook-form' }= t('text.games.log_in_with_facebook')

      .form-error
        &nbsp;
        = error_message_on @gamer_session, :email
        = error_message_on @gamer_session, :password
      - if params[:email]
        .field
          = label_tag "prefill-message", t('text.games.facebook_login_prefilled_form_msg')
      .field.email
        - @gamer_session.email = params[:email] if params[:email]
        = f.email_field :email, "autocorrect" => "off", "autocapitalize" => "off", :placeholder => t("text.shared.email"), :required => ""
      .field.password
        %label{ :for => "password", :class => "hidden" }
          Password
        = f.password_field :password, :placeholder => t("text.shared.password"), :required => ""
      - if params[:email]
        .field.mb45
          .field_checkbox.left
            = check_box_tag :enable_login_with_facebook, t("text.games.enable_login_with_facebook"), true
          .field.left
            = label_tag :enable_login_with_facebook, t("text.games.enable_login_with_facebook")
      .field.clearfix
        .ui-joy-button.soft-grey-action.cancel-btn
          = t("text.shared.cancel")
        = f.submit t("text.shared.login_verb"), :class => "ui-joy-button ui-button-orange login-btn"
      .forgot-pass
        = link_to(t("text.games.forgot_pass"), new_games_password_reset_path)

  .container.mt20.center
    = render '/shared/truste'

