.container
  .mod.titled-group
    .group-title= t('text.shared.profile')
    %ul.list-button-container.mb10
      %li.list-button.soft-gray-gradient
        - link_to edit_games_gamer_profile_path(@gamer_profile) do
          .hd= t('text.shared.name')
          .bd
            .edit-div
              = @gamer_profile.name
              %span.aside (change)
      %li.list-button.soft-gray-gradient
        - link_to edit_games_gamer_profile_path(@gamer_profile) do
          .hd= t('text.shared.nickname')
          .bd
            .edit-div
              = @gamer_profile.nickname
              %span.aside (change)
      %li.list-button.soft-gray-gradient
        - link_to edit_games_gamer_profile_path(@gamer_profile) do
          .hd= t('text.shared.gender')
          .bd
            .edit-div
              - gender_key = @gamer_profile.gender
              = t("text.shared.#{gender}") if gender_key.present?
              %span.aside (change)
      %li.list-button.soft-gray-gradient
        - link_to edit_games_gamer_profile_path(@gamer_profile) do
          .hd= t('text.shared.location')
          .bd
            .edit-div
              = @gamer_profile.city_and_country
              %span.aside (change)
  .mod.titled-group
    .group-title= t('text.shared.favorites')
    %ul.list-button-container.mb10
      %li.list-button.soft-gray-gradient
        - link_to edit_games_gamer_profile_path(@gamer_profile) do
          .hd= t('text.games.favorite_app')
          .bd
            .edit-div
              = @gamer_profile.favorite_game
              %span.aside (change)
      %li.list-button.soft-gray-gradient
        - link_to edit_games_gamer_profile_path(@gamer_profile) do
          .hd= t('text.games.favorite_category')
          .bd
            .edit-div
              = @gamer_profile.favorite_category
              %span.aside (change)
