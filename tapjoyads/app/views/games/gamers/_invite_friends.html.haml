.invite_wrapper
  .title_2
    Invite Your Friends!
  #invite_friends.clearfix
    .social_btn_wrapper
      = fb_connect_async_js
      - if @gamer.facebook_id.blank?
        .social_btn.fb{ :onclick => "doLogin('offline_access,publish_stream');" }
      - else
        .social_btn.fb{ :onclick => "location.href='#{games_social_invite_facebook_friends_path(:click_key => "#{params[:click_key]}")}';" }
    .social_btn_wrapper
      - link_to games_social_invite_email_friends_path(:click_key => "#{params[:click_key]}") do
        .social_btn.email

- content_for :page_javascript do
  :plain
    var doLogin = function(scope){
      FB.login(function(response, scope) {
        if (response.authResponse) {
          FB.api('/me', function(response) {
            <!--
            window.location = "#{CGI.unescapeHTML(games_social_invite_facebook_friends_path(:valid_login => true, :click_key => params[:click_key]))}"
            //-->
          });
        } else {
        }
      }, {scope: scope});
    };
