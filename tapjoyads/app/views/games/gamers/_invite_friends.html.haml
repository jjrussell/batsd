.invite_wrapper
  .title_2
    Invite Your Friends!
  #invite_friends.clearfix
    .social_btn_wrapper
      = fb_connect_async_js
      - if @gamer.facebook_id.blank?
        .social_btn.fb{ :onclick => "TJG.social.doFbLogin('#{games_social_invite_facebook_friends_path(:valid_login => true)}');" }
      - else
        .social_btn.fb{ :onclick => "location.href='#{games_social_invite_facebook_friends_path}';" }
    .social_btn_wrapper
      - link_to games_social_invite_email_friends_path do
        .social_btn.email
