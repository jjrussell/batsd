.invite_wrapper
  .title_2
    Invite Your Friends!
  #invite_friends.clearfix
    .social_btn_wrapper
      = fb_connect_async_js
      - if @gamer.facebook_id.blank?
        .social_btn.fb{ :onclick => "postToFeed();" }
      - else
        .social_btn.fb{ :onclick => "checkAndPost();" }
    .social_btn_wrapper
      - link_to games_social_invite_email_friends_path(:advertiser_app_id => "#{params[:advertiser_app_id]}") do
        .social_btn.email

- content_for :page_javascript do
  :plain
    function postToFeed() {
      TJG.social.postToFeed('#{games_login_url(:referrer => @gamer.encrypted_referral_id)}', '#{WEBSITE_URL}/images/ic_launcher_96x96.png');
    }

    function checkAndPost() {
      TJG.social.checkAndPost('#{@gamer.facebook_id}', '#{games_login_url(:referrer => @gamer.encrypted_referral_id)}', '#{WEBSITE_URL}/images/ic_launcher_96x96.png');
    }
