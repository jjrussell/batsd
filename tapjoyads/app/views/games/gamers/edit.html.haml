#jqt
  #home.current
    = render :partial => 'games/homepage/nav_bar', :locals => { :active => 'my_account' }

    .content_wrapper
      = render(:partial => 'header')
      .content
        = render(:partial => 'invite_friends')
        = render(:partial => 'profile')
        .title_2
          =t('text.shared.options')
        #account_options.content_box.clearfix
          - link_to social_games_gamer_path do
            .slider.bottom_line.clearfix
              .profile_arrow.right
              .field
                .label
                  =t('text.games.social_settings')
          - link_to password_games_gamer_path do
            .slider.bottom_line.clearfix
              .profile_arrow.right
              .field
                .label
                  =t('text.shared.reset_password')
          - link_to prefs_games_gamer_path do
            .slider.bottom_line.clearfix
              .profile_arrow.right
              .field
                .label
                  =t('text.shared.preferences')
          - link_to games_app_reviews_path do
            .slider.clearfix
              .profile_arrow.right
              .field
                .label
                  =t('text.shared.my_reviews')

- content_for :page_javascript do
  :plain
    var error = '#{params[:error]}';

    $(document).ready(function() {
      if(error){
        $('.error_msg').removeClass('hidden');
        $('.error_msg').text(error);
      }
    });
