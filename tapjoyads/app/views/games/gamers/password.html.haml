#jqt
  #home.current
    .nav
      .nav_container.clearfix
        .aside_nav
          %span
            Help
          %span
            |
          %span
            Logout
        .logo
        .nav_buttons
          %ul.nav_list.clearfix
            %ul.pair
              %li.active
                My Apps
              %li.more_games_url
                More Apps
            %ul.pair
              %a{ :href => edit_games_gamer_path }
                %li
                  My Account
              %li.share
                Share
    .content_wrapper
      = render(:partial => 'header')
      - form_for([ :games, @gamer ], :url => { :action => :update_password }) do |f|
        .content_box_wrapper
          .content_box.clearfix
            #edit_profile
              .slider.bottom_line.clearfix
                .field.clearfix
                  = label_tag 'gamer_password', 'New Password: '
                  = f.password_field :password
                = error_message_on @gamer, :password
              .slider.clearfix
                .field.clearfix
                  = label_tag 'gamer_password_confirmation', 'Confirm Password: '
                  = f.password_field :password_confirmation
                = error_message_on @gamer, :password_confirmation
        .button_bar
          = submit_tag('Save', :class => 'button lt_blue'e
