#profile_info_display
  .info_expand
    .center_container
      %table
        %tr
          %td
            - if @gamer_profile.image_source == 'facebook' && @gamer_profile.facebook_id.present?
              = render(:partial => 'facebook_avatar')
            - else
              = render(:partial => 'gravatar')
          %td
            .gamer_name
              = @gamer.get_gamer_nickname
            .gamer_email
              = @gamer.email
            .gamer_signup_date
              = "Member since #{@gamer.created_at.strftime("%B %d, %Y")}"
  .info_expand_bottom_arrow_wrapper
    .info_expand_bottom_arrow
