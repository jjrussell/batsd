#show.current
  - if @partner_filtered_publishers.present?
    #gamesRow.row.borders.nbb
      %h1.museo.row-title= @partner.name + " " + t('text.games.apps')
      .games
        - @partner_filtered_publishers.each do |partner_filtered_publisher|
          - @encrypt_currency_id = ObjectEncryptor.encrypt(partner_filtered_publisher.currencies.first[:id])
          .app
            = link_to(games_earn_path(:eid => @encrypt_currency_id)) do
              .app-icon.squircle
                %img{ :src => BLANK_IMAGE, :source => partner_filtered_publisher.get_icon_url(:size => 114, :source => :cloudfront)}
            = link_to(games_earn_path(:eid => @encrypt_currency_id)) do
              .details
                %span.title.elip
                  = partner_filtered_publisher.app_name
                %small.publisher.elip
                  = partner_filtered_publisher.partner_name
                %span.ui-icon-small.score.icon16
                  -# "#{@app_metadata.positive_thumbs_percentage.floor}%"
                %span.ui-icon-small.social.icon16
                  -# "#{@app_metadata.app_reviews.by_gamers.size}"
            = link_to(games_earn_path(:eid => @encrypt_currency_id)) do
              .btn
                = t('text.shared.earn_verb')
              .ui-list-action.myapps-earn
                .rightarrow.icon16
                  .ui-list-action-label.pt3
                    = t('text.shared.earn_verb')
