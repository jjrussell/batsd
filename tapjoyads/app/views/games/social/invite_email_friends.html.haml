.panel
  .page-header
    .container
      .left.ml10.pt3
        .big-title.mt10
          = t('text.games.invite_title')
  .container
    .mod
      - form_tag games_social_send_email_invites_path, :class => "ajax-submit", "data-success-event" => "email-invite-ajax-success" do
        .mod.pb3
          = t('text.shared.recipients')
        .mod.form-section
          = text_field_tag :recipients, @recipients, :placeholder => t('text.games.recipients_label'), :class => "ui-joy-input"
        .mod.form-section.pt20.pb20
          = submit_tag t("text.shared.submit"), :class => "ui-joy-button soft-grey-action"

- content_for :page_javascript do
  :plain
    $(function($) {
      var options = {
        channel:   'EMAIL',
        inviteUrl: '#{social_feature_redirect_path}',
        advertiserAppId: #{params[:advertiser_app_id].to_json},
      };
      Tapjoy.Social.Invite(options);
    });
