- if @incomplete_offers.any?
  .container.mb15
    = select_tag :offer_id, options_for_select(@incomplete_offers.collect { |o| [ o.name, o.id ] }, params[:offer_id].present? ? params[:offer_id] : @incomplete_offers.first.id)

- else
  .field.mb20
    = label_tag 'no_incomplete_offers', t('text.games.contact_support.no_incomplete_offers_label')
