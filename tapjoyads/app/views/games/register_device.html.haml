- content_for :page_javascript do
  - if Rails.env.development?
    :plain
      $(window).load(function() {
        if (TJG.vars.isIos == false) {
          $("#no_device").html('');
          TJG.utils.centerDialog("#bad_news");
          $("#bad_news").fadeIn();
        }
        $("#no_device").show();
        var jQT = new $.jQTouch({
          slideSelector: '#jqt .slide_nav',
        });
      });
  - else
    :plain
      $(window).load(function() {
        $("#no_device").show();
        var jQT = new $.jQTouch({
          slideSelector: '#jqt .slide_nav',
        });
      });                                       