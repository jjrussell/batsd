- @page_title = 'Register'

%h1 Register

- form_for([ :games, @gamer ], :url => { :action => :create }) do |f|
  .field
    = f.label :username
    = f.text_field :username
    = error_message_on @gamer, :username
  .field
    = f.label :email, 'Email (optional)'
    = f.text_field :email
    = error_message_on @gamer, :email
  .field
    = f.label :password
    = f.password_field :password
    = error_message_on @gamer, :password
  .field
    = f.label :password_confirmation
    = f.password_field :password_confirmation
    = error_message_on @gamer, :password_confirmation
  .field
    = f.submit 'Register'
