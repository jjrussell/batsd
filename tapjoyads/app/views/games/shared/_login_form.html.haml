#login-form
  #header-signup.header-signup
    .headerwrap
      .wrap
        .container
          .nav
            .logo
              = link_to(games_root_path) do
                %img{ :src => BLANK_IMAGE }
  .bd.clearfix
    = render 'games/gamers/flow_navigation', :header_text => t("text.shared.login_verb")
    .outer-auth
      .flocus.auth.container{'data-flocuser-selector' => 'input'}
        .flocal.left-form
          = render 'games/gamer_sessions/facebook_login'
        .flocal.right-form
          = form_for([ :games, gamer_session ], :url => "#{games_gamer_sessions_path(:path => params[:path], :data => params[:data])}", :html => { :class => 'js-watch-valid' }) do |f|
            - if params[:data].present?
              = hidden_field_tag :data, params[:data]
            - if params[:path].present?
              = hidden_field_tag :path, params[:path]

            .fields
              .field.email
                = f.email_field :email, "autocorrect" => "off", "autocapitalize" => "off", :placeholder => t("text.shared.email"), :required => ""
              .field.password
                %label{ :for => "password", :class => "hidden" }
                  Password
                = f.password_field :password, :placeholder => t("text.shared.password"), :required => ""

              .forgot-pass
                = link_to t("text.games.forgot_pass"), new_games_password_reset_path
              = f.submit t('text.shared.login_verb'), :class => 'hidden-submit'

      = render 'games/shared/device_setup'

  .container.mt20.center
    = render '/shared/truste'

= form_tag "#{games_gamer_sessions_path(:path => params[:path], :data => params[:data], :referrer => params[:referrer], :facebook => true)}", :method => :post, :id => 'log-in-with-facebook-form', :authenticity_token => "#{form_authenticity_token}"

- @load_facebook = true
- js_cache 'marketplace/auth-pages/login'
