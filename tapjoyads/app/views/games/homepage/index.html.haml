#jqt
  #home.current
    .container.vertical-scroll
      .scroller.with-scrollbar
        .top_nav_bar
        .page
          .logo_title_preload
          .logo
            .slide_nav
              %a{ :href => "#", :class => "more_games_url" }
                .slider.more_games.slider_right.right
                  %span.title.small
                    More Games
              .slider_btn.left
                .slider.slider_active.slider_left
                  %span.title
                    My Apps
                .slide_arrow_wrapper.bottom_arrow
                  .slide_arrow
          - if current_gamer.devices.empty?
            .content_wrapper
              .content
                = render 'register_device'
          - elsif @external_publishers.blank?
            .content_wrapper
              = render 'featured_review_preview'
              .content
                = render 'no_games'
          - else
            .content_wrapper
              = render 'featured_review_preview'
              .content
                = render 'my_apps'
  #feat_app
    .container.vertical-scroll
      .scroller.with-scrollbar
        .top_nav_bar
        .page
          .logo
            .slide_nav
              %a{ :href => "#home", :class => "slideright" }
                .left
                  .slide_arrow_wrapper.left_arrow
                    .slide_arrow
                .slider.back.slider_active.slider_left.left
                  %span.title
                    Back
          .content_wrapper
            #feat_app.content
              = render 'featured_review'

  #earn
    .container.vertical-scroll
      .scroller.with-scrollbar
        .top_nav_bar
        .page
          .logo
            .slide_nav
              %a{ :href => "#home", :class => "slideright" }
                .left
                  .slide_arrow_wrapper.left_arrow
                    .slide_arrow
                .slider.back.slider_active.slider_left.left
                  %span.title
                    Back
          .content_wrapper
            .content
              #app_title
                %span.arrow
              #earn_content.hide

  #more_games
    .container.vertical-scroll
      .scroller.with-scrollbar
        .top_nav_bar
        .page
          .logo
            .slide_nav
              %a{ :href => "#home", :class => "slideright"}
                .slider_btn.left
                  .left
                    .slide_arrow_wrapper.left_arrow
                      .slide_arrow
                  .slider.back.slider_active.slider_left.left
                    %span.title
                      Back
          .content_wrapper
            .content
              .tab_wrapper.clearfix
                #top_grossing_games_tab.tab_right
                  #top_grossing_games_button.tab_button.grey
                    .tab_content
                      Popular Games
                  #top_grossing_games_button_arrow.tab_button_bottom_arrrow_wrapper
                    .tab_button_bottom_arrrow
                #recommended_games_tab.tab_left
                  #recommended_games_button.tab_button.dark_grey
                    .tab_content
                      Tapjoy Recommends
                  #recommended_games_button_arrow.tab_button_bottom_arrrow_wrapper
                    .tab_button_bottom_arrrow
              #more_games_content.hide   

= render 'my_account'

- content_for :page_head do
  %meta{ :name => 'description', :content => 'Tapjoy Games: The destination for mobile apps and games on Android, iPhone and iPad.' }
  %meta{ :name => 'keywords', :content => 'games, mobile games, mobile apps, iOS, iPhone, iTouch, iPad, Android' }

- content_for :page_javascript do
  :plain
    $(window).load(function() { 
      TJG.ui.homeInit();
      TJG.more_games_editor_picks =  "#{games_more_games_editor_picks_path}";
      TJG.more_games_popular =  "#{games_more_games_popular_path}";
    });
