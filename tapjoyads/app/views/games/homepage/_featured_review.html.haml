.app_review.full
  .app_item.clearfix
    .app_image
      %img{:src => Offer.get_icon_url(:size => '57', :source => :cloudfront, :icon_id => Offer.hashed_icon_id(@featured_review.app_id)) }
    .app_text
      .app_title.title
        = @featured_review.app.name
      .app_meta
        = @featured_review.app.primary_category
      - link_to(@featured_review.app.info_url) do
        .button.grey  
          Download now!

  .staff_info.full.clearfix
    .staff_img
      %img{:src => @featured_review.author.get_photo_url(:source => :cloudfront) }
    .staff_meta
      .staff_name
        %span.author
          #{@featured_review.author.first_name} says:

  .review_text
    -# TODO: Escape this text once we start supporting user reviews.
    = "&#8220;#{@featured_review.text.gsub("\n", "<br>")}&#8221"