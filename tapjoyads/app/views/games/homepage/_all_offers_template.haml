%script{:type => "text/template"}
  :plain
    <% var freeText = "#{t('text.offerwall.free')}"; %>
    <% for (var i = 0, ii = OfferArray.length; i < ii; i++) { %>
      <% if (!OfferArray[i].IconURL || !OfferArray[i].Name) { continue; } %>
      <li class="list-button">
        <a class="req-login" href="<%= OfferArray[i].RedirectURL %>">
          <div class="container ofh">
            <div class="app-item-col pt3">
              <div class="squircle earn-app-icon">
                <img src="data:image/gif;base64,R0lGODlhAQABAID/AMDAwAAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw==" source_sm="<%= OfferArray[i].IconURL %>" source_med="<%= OfferArray[i].IconURLMedium %>" />
              </div>
              <div class="item-meta">
                <% if (OfferArray[i].Cost === "Free") { %>
                  <div class="item-price-wrapper">
                    <div class="item-price free">
                      <%= i18n.t('games.free') %>
                      </div>
                    </div>
                <% } else if (OfferArray[i].Cost !== freeText) { %>
                  <div class="item-price-wrapper">
                    <div class="item-price">
                      <%= OfferArray[i].Cost %>
                      </div>
                  </div>
                <% } %>
                <% if (OfferArray[i].WifiOnly) { %>
                  <div class="wifi">
                    &nbsp;
                  </div>
                <% } %>
              </div>
            </div>
            <div class="info app-info">
              <div class="mt3">
                <div class="big-title slate">
                  <%= OfferArray[i].Name %>
                </div>
              </div>
              <% if (OfferArray[i].Type === 'App') { %>
                <div class="earn-install-run elip ofh mt5">
                  <%= i18n.t('games.install_and_run', {name: ""}) %>
                  </div>
              <% } %>
              <% if (OfferArray[i].Type === "App") { %>
                <div class="ui-icon-medium social icon24 p5 hide">
                  <%= i18n.t('games.active_gamers_text', {count: (OfferArray[i].ActiveGamers == null) ? '0' : OfferArray[i].ActiveGamers}) %>
                </div>
              <% } %>
              <div class="earn-currency-amount ofh mt10 mb10 ui-joy-button orange-action inline">
                <%= i18n.t("games.amount_and_currency_earn", {amount: '<span class="currency-amount">' + OfferArray[i].Amount + '</span>', currency: '<span class="currency-name">' + CurrencyName + '</span>'}) %>
              </div>
            </div>
          </div>
        </a>
      </li>
    <% } %>
