.feat_review.min
  .feat_toggle.collaspe
  .feat_content
    .staff_info
      .staff_img
        %img{:src => @featured_review.get_icon_url("#{@featured_review.id}_main") }
      .staff_meta
        .offer_type.title= @featured_review.featured_type
        .staff_name
          by
          %span.author
            = @featured_review.subtitle
    .app_review.hide
      %a{ :href => "#", :class => "feat_app_url" }
        .app_item.clearfix
          .feat_arrow.right
          .app_image
            %img{:src => @featured_review.get_icon_url("#{@featured_review.id}_secondary") }
          .app_text
            .app_title.title
              = @featured_review.title
            .app_info
              = truncate(@featured_review.description, :length => 65)
