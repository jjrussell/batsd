- active ||= ""
- show_device ||= false

- if show_device
  .device_wrapper
    .device.clearfix
      .mobile_icon
      .device_info
        .device_name
          = @device_name
        .device_switch
          wrong device?
      .plus

.nav
  .nav_container.clearfix
    .aside_nav
      %span
        = link_to("Help", games_help_path )
      %span
        |
      - link_to(games_logout_path) do
        %span Logout
    - link_to(games_root_path, :class => "slideright") do
      .logo
    .nav_buttons
      .nav_list.clearfix
        %ul
          %ul.pair
            - if active == 'back'
              - link_to(back_button_destination, :class => "slideright") do
                %li.my_apps Back
            - else
              - if active == 'my_apps'
                %li.my_apps.active_button My Apps
              - else
                - link_to(games_root_path, :class => "slideright") do
                  %li.my_apps My Apps
              - if active == 'more_apps'
                %li.more_apps.more_apps_path.active_button More Apps
              - elsif active == 'my_apps'
                %li.more_apps.more_apps_path More Apps
              - if active == 'my_account'
                %li.my_account.active_button My Account
              - else
                - link_to(edit_games_gamer_path) do
                  %li.my_account My Account
              - if false
                - if active == 'share'
                  %li.share.active_button Share
                - elsif active != 'my_account'
                  %li.share Share
