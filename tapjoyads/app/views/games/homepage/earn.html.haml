#earn.current
  .panel
    .mod.line-item.page-header
      .hd
        .app-icon.squircle
          = image_tag(@external_publisher.get_icon_url(:size => 114, :source => :cloudfront))
      .bd
        .title.elip
          = @external_publisher.app_name
        .sub-title
          Publisher
    .mod.social-info
      %span.ui-icon-med.score-med
        &nbsp;
      %span.ui-icon-med.social-med
        &nbsp;
    .mod.menu-head.always-visible
      .container
        .left= t('text.games.browse_offers')
        .ui-icon.down-arrow.right
          &nbsp;
    = render("offers")
    .mod.review-area.light
      -link_to games_app_reviews_path(:app_metadata_id => @app_metadata_id) do
        .ui-joy-button.grey-action
          .text-center
            = t("text.games.review_app_name", {:app_name => @external_publisher.app_name})

-content_for :included_javascripts do
  = javascript_include_tag "games/src/marketplace"
