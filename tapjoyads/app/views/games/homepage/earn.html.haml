#earn.current
  .panel
    .page-header
      .container.mt20
        .left.ml10.pt3
          .squircle
            = image_tag(@external_publisher.get_icon_url(:size => 114, :source => :cloudfront))
        .left.ml10
          .big-title.slate.elip.mt10
            = @external_publisher.app_name
          .container
            .left.ui-icon-medium.score.icon24.p5
              80%
            .left.ui-icon-medium.social.icon24.p5.ml5
              30      
    .section.dark
      .heading
        = t('text.games.browse_offers')
      .toggle
        %img.downarrow.icon32{ :src => BLANK_IMAGE}
    .review-area
      %ul.list-button-container.earn-theme
        %li.list-button
          .container.mt5
            .left.pt3
              .squircle
                = image_tag(@external_publisher.get_icon_url(:size => 114, :source => :cloudfront))
            .left.ml10
              .container
                .big-title.slate.elip
                  Coin Dozer for Pro for iPad
              .container
                .ui-icon-medium.score.icon24.p5.left
                  80%
                .ui-icon-medium.social.icon24.p5.left.ml10
                  15
              .container
                .ui-icon-medium.wifi.icon24.p5.left
                  Wi-Fi Required   
            .right
              .collect.center.mt5
                = t('text.shared.collect')
                <br>365 Coins 
              .greenblock.mt5
                = t('text.shared.collect')    
        %li.list-button
          .container.mt5
            .left.pt3
              .squircle
                = image_tag(@external_publisher.get_icon_url(:size => 114, :source => :cloudfront))
                .action-item
                  $
            .left.ml10
              .container
                .big-title.slate.elip
                  Coin Dozer for Pro for iPad
              .container
                .ui-icon-medium.score.icon24.p5.left
                  80%
                .ui-icon-medium.social.icon24.p5.left.ml10
                  15
              .container
                .ui-icon-medium.wifi.icon24.p5.left
                  Wi-Fi Required   
            .right
              .collect.center.mt5
                = t('text.shared.collect')
                <br>365 Coins 
              .greenblock.mt5
                = t('text.shared.collect')    
    .section.dark
      .heading
        Other Options  
    %ul.list-button-container.flush.nbb
      -link_to new_games_app_review_path(:app_metadata_id => @app_metadata_id) do
        %li.list-button.ntb
          .left.charcoal
            = t("text.games.review_app_name", {:app_name => @external_publisher.app_name})
          .right.rightarrow.icon16
            &nbsp;
          
-content_for :included_javascripts do
  = javascript_include_tag "games/src/marketplace"
