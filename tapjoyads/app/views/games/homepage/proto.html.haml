!!!
%html
  %head
    -# stylesheet_link_tag("games/components/button/button.css")
    %meta{ 'name' => 'viewport', 'content' => 'width=device-width; initial-scale=1.0; maximum-scale=1.0; user-scalable=no;' }
    = stylesheet_link_tag("games/proto")
    = javascript_include_tag("https://raw.github.com/keithclark/selectivizr/master/selectivizr.js")
    = javascript_include_tag("https://raw.github.com/scottjehl/Respond/master/respond.min.js")
    = javascript_include_tag("games/src/tjg.jquery-1.6.2.min")
    = javascript_include_tag("games/src/tapui/core/foundation")
    = javascript_include_tag("games/src/tapui/core/components")
    = javascript_include_tag("games/src/tapui/core/objects")
    = javascript_include_tag("games/src/tapui/core/strings")
    = javascript_include_tag("games/src/tapui/core/arrays")
    = javascript_include_tag("games/src/tapui/core/functions")
    = javascript_include_tag("games/src/tapui/core/helpers")
    = javascript_include_tag("games/src/tapui/core/utilities")
    = javascript_include_tag("games/src/tapui/components/button/button")
    = javascript_include_tag("games/src/fittext")
    = javascript_include_tag("games/src/proto")
  %body
    .page
      .header.dark-red-gradient
        .container
          .nav-menu.clearfix
            .left
              .item
                %a My Apps
              .item
                %a More Apps
            .logo
              = image_tag "games/logo-navbar.png"
            .right
              .device-icon
                &nbsp;
      .sub-head
        .container
          .ad
            &nbsp;
      .main
        .container
          .tab-carousel
            %ul.clearfix
              %li
                %a.current{:href => "#"}
                  Favorites
              %li
                %a{:href => "#"}
                  Smart Recommendations
              %li
                %a{:href => "#"}
                  My Games
          .game-list#recommendations
            .hd
              %h2 Smart Recommendations
            .bd.clearfix
              -5.times do
                .app
                  .game-image= image_tag "games/angry.jpg"
                  .info
                    .title
                      Scrabble
                    .description
                      Based on Words with Friends game
          .game-list#favorites.selected
            .hd
              %h2 Favorites
            .bd.clearfix
              -5.times do
                .app
                  .game-image= image_tag "games/angry.jpg"
                  .info
                    .title
                      Scrabble? Scrabble. Mo-fo for real Scrabble, y'all
                    .description
                      Based on Words with Friends game
                    .summary.clearfix
                      .rank
                        %span.icon
                        %span.value
                          80%
                      .friends
                        %span.icon
                        %span.value
                          10
                      .clear
                      .current
                        552 Birds
                  .collect
                    Collectiswaylongerinrussian
          .game-list#mine
            .hd
              %h2 My Games
            .bd.clearfix
              -10.times do
                .app
                  .game-image= image_tag "games/angry.jpg"
                  .info
                    .title
                      Scrabble
                    .description
                      Based on Words with Friends game
                    .summary.clearfix
                      .rank
                        %span.icon
                        %span.value
                          80%
                      .friends
                        %span.icon
                        %span.value
                          10
                      .clear
                      .current
                        552 Birds
                  .collect
                    Collect
