- @page_title = 'Employees'

%h1 Employees

= link_to '[Add new employee]', new_employee_path
%br

%table#employees_table.tablesorter
  %thead
    %tr
      %th Active?
      %th First Name
      %th Last Name
      %th Email
      %th Title
      %th Department
      %th Comments
  %tbody
    - @employees.each do |employee|
      %tr
        %td= employee.active ? "Yes" : "No"
        %td= employee.first_name
        %td= employee.last_name
        %td= link_to employee.email, edit_employee_path(employee)
        %td= employee.title
        %td= employee.department
        %td= employee.comments


- content_for :page_styles do
  :plain
    table.tablesorter {
      border-collapse: separate;
    }
    table.tablesorter th.up_arrow {
      background-position: 100% 50%;
      background-repeat: no-repeat;
      background-image: url(/stylesheets/themes/blue/asc.gif);
      background-color: #8DBDD8;
    }
