#apps_tools
  %ul
    - unless app.nil?
      %li= link_to 'Details', app_path(app)
      %li= link_to 'Pay-Per-Install', app_offer_path(:id => app.primary_offer.id, :app_id => app.id)
      - unless app.currency.nil?
        %li= link_to 'Virtual Currency', app_currency_path({:app_id => app.id, :id => app.currency.id})
      - else
        %li= link_to 'Virtual Currency', new_app_currency_path({:app_id => app.id})
      %li.disabled Virtual Goods
    - else
      %li.disabled Details
      %li.disabled Pay-Per-Install
      %li.disabled Virtual Currency
      %li.disabled Virtual Goods

  - content_for :page_styles do
    :plain
      #apps_tools {
        float: left;
        width: 200px;
      }
      #apps_tools li {
        list-style: none;
        padding-bottom: 10px;
      }
      #apps_tools li.disabled {
        color: #aaa;
      }
      #apps_main {
        margin-left: 210px;
      }
