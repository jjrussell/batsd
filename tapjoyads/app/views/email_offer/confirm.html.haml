- @page_title = 'Tapjoy Registration'

#offers
  #header
    %h1= @page_title

  %p= @confirm_text

- content_for :page_styles do
  :plain
    * {
      margin: 0;
      padding: 0;
      outline: 0;
      font-weight: inherit;
      font-style: inherit;
      font-size: inherit;
      font-family: inherit;
      vertical-align: baseline;
      text-decoration: none;
    }

    body {
      margin-bottom: 10px;
      color: #004E09;
    }

    h1 {
      font-size: 24px;
    }

    p {
      margin: 1em 0;
    }

    #offers {
      margin: 10px 3%;
      background: white;
      border: 1px solid #d5d5d5;
      -moz-border-radius: 10px;
      -webkit-border-radius: 10px;
      padding: 10px;
    }

    #header {
      border-bottom: 2px solid;
    }
