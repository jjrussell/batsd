- @page_title = 'All Apps Featured Placement'

%h1
  All Apps Featured Placement

  = button_to "Create New", new_tools_staff_pick_path

%br
= render :partial => 'list', :object => @active_staff_picks, :locals => { :list_name => :active }
= render :partial => 'list', :object => @upcoming_staff_picks, :locals => { :list_name => :upcoming }
#expired_picks.hidden
  = render :partial => 'list', :object => @expired_staff_picks, :locals => { :list_name => :expired }

= link_to 'Show expired', '#', :id => 'show_expired_picks'

- content_for :page_javascript do
  :plain
    $('#show_expired_picks').click(function(){
      $(this).hide();
      $('#expired_picks').show();
      return false;
    });
