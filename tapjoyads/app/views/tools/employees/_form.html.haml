- form_for([ :tools, @employee ], nil, :html => { :class => 'tjform', :multipart => true }) do |f|
  - if params[:action] == 'new'
    .field
      = f.label(:email)
      = f.text_field(:email)
      = error_message_on @employee, :email
  - if params[:action] == 'edit'
    .field
      = f.label(:active, "Active?")
      = f.check_box(:active)
  .field
    = f.label(:first_name)
    = f.text_field(:first_name)
    = error_message_on @employee, :first_name
  .field
    = f.label(:last_name)
    = f.text_field(:last_name)
    = error_message_on @employee, :last_name
  .field
    = f.label(:title)
    = f.text_field(:title)
    = error_message_on @employee, :title
  .field
    = f.label(:biography, "Short Bio")
    = f.text_area(:biography)
    %br No more than three (3) sentences
    = error_message_on @employee, :biography
  .field
    = f.label(:superpower, "What is your secret superpower?")
    = f.text_field(:superpower, :size => 70)
    = error_message_on @employee, :superpower
  .field
    = f.label(:current_games, "What are you currently playing?")
    = f.text_field(:current_games, :size => 70)
    %br Doesn't have to be mobile
    = error_message_on @employee, :current_games
  .field
    = f.label(:weapon, "What is your weapon of choice?")
    = f.text_field(:weapon, :size => 70)
    %br E.g. iPhone, ninja stars, Red Bull
    = error_message_on @employee, :weapon
  - if params[:action] == 'edit'
    .field
      = label_tag("Current Photo", "Current Photo")
      = image_tag @employee.get_photo_url, :alt => @employee.photo_alt_name
      %br= link_to "Remove Photo", :action => 'delete_photo', :id => @employee.id
  .field
    = label_tag :upload_photo
    = file_field_tag :upload_photo
  = submit_tag params[:action] == 'new' ? "Create" : "Update"

- content_for :page_styles do
  :plain

    label {
      vertical-align: top;
      font-weight: bold;
      text-align: right;
      display: inline-block;
      width: 200px;
      margin-left: -200px;
    }

    textarea {
      width: 500px;
      height: 75px;
    }

    input[type=submit] {
      float: right;
    }

    .field {
      margin-bottom: 5px;
      margin-left: 200px;
    }
