%table.tablesorter
  %thead
    %tr
      %th Currency Name
      %th App
      %th Age
      %th Owner
      %th State
      %th Action
  %tbody
    - @approvals.each do |approval|
      %tr
        %td= link_to(approval.item.name, app_currency_path({:app_id => approval.item.app.id, :id => approval.item.id}) )
        %td= approval.item.app.name
        %td #{time_ago_in_words(approval.item.created_at)} ago
        %td= render :partial => 'owner_select', :locals => {:approval => approval}
        %td= approval.state
        %td.actions
          - if approval.pending?
            = link_to('Approve', approve_tools_currency_approval_path(approval.id), :class => 'approve')
            = link_to('Reject', reject_tools_currency_approval_path(approval.id), :class => 'reject')
