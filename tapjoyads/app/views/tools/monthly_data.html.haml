- @page_title = 'Monthly Data'

%h1 Monthly data for #{@period}

- form_tag('/tools/monthly_data', :method => "get") do
  %select{:name => "period", :onchange => "this.form.submit()"}
    - @months.each do |str|
      %option{:value => str.split('.')[1], :selected => str.split('.')[1] == @input}= str.split('.')[0]
    end

%table
  %thead
    %tr
      %th 
      %th 
  %tbody
    %tr
      %td spend
      %td= number_to_currency(@spend)
    %tr
      %td marketing
      %td= number_to_currency(@marketing)
    %tr
      %td linkshare_est
      %td= number_to_currency(@linkshare_est)
    %tr
      %td ads_est
      %td= number_to_currency(@ads_est)
    %tr
      %td revenue
      %td= number_to_currency(@revenue)
    %tr
      %td earnings
      %td= number_to_currency(@earnings)
    %tr
      %td net_revenue
      %td= number_to_currency(@net_revenue)
    %tr
      %td margin
      %td= number_to_percentage(@margin, :precision => 2)
    %tr
      %td
      %td
    %tr
      %td new_orders
      %td= @new_orders
    %tr
      %td payouts
      %td= @payouts
    %tr
      %td transfers
      %td= @transfers

-content_for :page_styles do
  :plain
    table {
      border-collapse: collapse;
    }

    th, td {
      border: 1px solid gray;
      padding: 5px;
      text-align: right;
    }
