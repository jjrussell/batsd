= breadcrumb link_to("Tools", tools_path), link_to(@offer, statz_path(@offer)), link_to("Sales reps", tools_offer_sales_reps_path(@offer)), "Add"
%h1 Add sales rep for #{ @offer }
.row-fluid
  .span8
    - form_for @sales_rep, :url => tools_offer_sales_reps_path(@offer), :html => { :class => 'well' } do |f|
      = f.error_messages :class => 'alert alert-error'
      = f.label :sales_rep_id, "Sales rep"
      - options = options_from_collection_for_select(User.sales_reps, "id", "email")
      = f.select :sales_rep_id, options
      = error_message_on @sales_rep, :sales_rep_id
      = f.label :start_date
      = f.text_field :start_date, :class => 'datepicker', :value => @sales_rep.start_date ? @sales_rep.start_date.strftime("%m/%d/%Y"): nil
      = error_message_on @sales_rep, :start_date
      %br/
      %br/
      = f.submit "Add sales rep"
- content_for :page_javascript do
  :plain
    $(function() {
      $('.datepicker').datepicker();
    });
