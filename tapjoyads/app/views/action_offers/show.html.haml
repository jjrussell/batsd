- @page_title = @app.name[0..20]

#offers
  #header
    %img.app_icon{ :src => @offer.get_icon_url(:source => :cloudfront, :size => '57') }
    #action_name
      = @action_offer.name
      %br
      = "Earn "
      %span.amount= @currency.get_visual_reward_amount(@offer) + " " + @currency.name
  
  #action_instructions  
    .important= "Follow these steps to earn #{@currency.name}:"
    .instructions= simple_paragraphs @action_offer.instructions
    .important
      = "After completing these steps, you will earn "
      %span.amount= "#{@currency.get_visual_reward_amount(@offer)} #{@currency.name}."
    
  #footer
    %div= "If you don't have this app, click #{link_to("here", @app.direct_store_url)} to download it."
  
#privacy
  = link_to('Privacy', 'https://www.tapjoy.com/privacy')

#adsby 
  Ads by
  %img{ :src => "#{CLOUDFRONT_URL}/images/tapjoylogo-small.png", :alt => "Tapjoy"}

.clear

%img.hidden{ :src => '/images/load-circle.gif' }

  
- content_for :page_styles do
  :plain
    * {
      margin: 0;
      padding: 0;
      outline: 0;
      font-weight: inherit;
      font-style: inherit;
      font-size: inherit;
      font-family: inherit;
      vertical-align: baseline;
      text-decoration: none;
    }
  
    body {
      margin-bottom: 10px;
      color: #004E09;
    }
  
    img {
      border: 0;
    }
  
    #offers {
      margin: 10px 3%;
      background: white;
      border: 1px solid #d5d5d5;
      -moz-border-radius: 10px;
      -webkit-border-radius: 10px;
      padding: 10px;
    }
  
    .amount {
      color: rgb(0, 136, 16);
    }
  
    #adsby, 
    #privacy a {
      font-size: 75%;
      color: #004E09;
    }
  
    #adsby {
      margin-top: 2px;
      float: right;
      margin-right: 5%;
    }
  
    #adsby img {
      vertical-align: bottom;
    }
  
    #privacy {
      float: left;
      margin-left: 5%;
      text-decoration: underline;
    }
  
    .clear {
      clear: both;
    }
  
    .hidden {
      display: none;
    }
    
    #header img {
      float: left;
      margin: 0 10px 0 0;
    }
    
    #header #action_name {
      height: 57px;
      display: table-cell;
      vertical-align: middle;
      padding-bottom: 10px;
    }
    
    #header {
      border-bottom: 2px solid;
    }
    
    #action_instructions {
      clear: both;
      margin-top: 10px;
      border-bottom: 2px solid;
    }
    
    .important {
      font-weight: bold;
      margin: 10px 0;
    }
    
    .instructions {
      margin: 10px 20px;
    }
    
    .instructions p {
      margin-bottom: 10px;
    }
    
    #footer {
      margin: 10px 0 0;
    }
