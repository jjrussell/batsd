- @page_title = 'Distribution'

%h3= "Distribution on #{@app_metadata.store.name}"

- form_for [@app, @app_metadata], :url => app_app_metadata_path, :method => :put, :html => {:class => 'tjform'} do |f|
  %table
    %tbody
      %tr
        %th Platform
        %td
          = @app.platform_name
          = hidden_field_tag :app_platform, @app.platform
      %tr
        %th Market
        %td
          = @app_metadata.store.name
          = hidden_field_tag :store_name, @app_metadata.store_name
      - if permitted_to?(:edit, :statz) && @app.platform == 'iphone'
        = render :partial => 'select_country'
        %tr.admin
          %th
            Country blacklist
          %td
            - if @app.get_countries_blacklist.present?
              = @app.countries_blacklist
            .inline_help
              This field is auto-filled from iTunes. Offers from this app will not
              show up in countries appearing in this field.
      %tr
        %th
          Name
        %td
          = text_field_tag :app_name, @app_metadata.name
          #search_results= image_tag 'load-circle.gif', :class => 'load-circle'
        %td= button_to "Search #{@app_metadata.store.name}", '#', :class => 'search', :id => 'search_button'
      %tr
        %th Store ID
        %td
          - if @app_metadata.store_id.present?
            = link_to(@app_metadata.store_id, @app_metadata.info_url, :target => '_blank', :id => 'app_store_link')
          - else
            %a#app_store_link{ :target => '_blank' }
          = hidden_field_tag :store_id, @app_metadata.store_id, :id => 'app_store_id'
      %tr
        %th Icon
        %td#app_icon= image_tag(@app_metadata.get_icon_url, :size => '57x57', :alt => 'icon')
      %tr
        %th Price
        %td#app_price= number_to_currency(@app_metadata.price / 100.0)
      %tr
        %th Description
        %td#app_description= (@app_metadata.description || '').gsub("\n", '<br>')
      %tr
        %td{ :colspan => 2 }= f.submit "Update from #{@app_metadata.store.name}", :id => 'submit_button'

- content_for :page_head, stylesheet_link_tag('apps')
- content_for :included_javascripts, javascript_include_tag('tapjoy/apps')
