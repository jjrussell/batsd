- @page_title = 'Password Reset'

%h1 Password Reset

= form_for(:user, @user, :url => { :action => :update }, :html => { :method => :put, :class => 'tjform' }) do |f|
  %table
    %tr
      %th= f.label :password, 'New Password'
      %td
        = f.password_field :password
        = error_message_on @user, :password
    %tr
      %th= f.label :password_confirmation, 'Confirm New Password'
      %td
        = f.password_field :password_confirmation
        = error_message_on @user, :password_confirmation
    %tr
      %td{ :colspan => 2 }= f.submit 'Submit'

- content_for :page_javascript do
  :plain
    $(function() {
      $('#user_password').focus();
    });
