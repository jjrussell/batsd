    Account number to your bank account.
    %br/
    %br/
    %strong International (IBAN):
    International Bank Account Number.
  #help_bank_swift_code_content{:name => 'Routing # / SWIFT'}
    %strong U.S. (Routing number):
    Routing number to your bank account.
    %br/
    %br/
    %strong International (SWIFT):
    The 8 to 11 character alphanumeric code associated with your financial institution.

- content_for :page_styles do
  :plain
    table.payout_info th {
      text-align: right;
      width: 200px;
    }
    table.payout_info input, table.payout_info select {
      width: 200px;
    }
    .country_us, .country_other {
      display: none;
    }
    .country_other select {
      visibility: hidden;
    }
    #terms-us, #terms-other {
      font-size: 12px;
    }
    .fieldWithErrors {
      display: inline;
    }
    .formError {
      color: red;
      font-size: 10px;
    }

- content_for :page_javascript do
  :plain
    var toggleByCountry = function() {
      var method = $('#payout_info_payout_method').val();
      if (method == 'paypal') {
        $('.country_us').hide();
        $('.country_other').hide();
        $('.address').hide();
        $('.paypal').show();
      } else {
        $('.country_us').show();
        $('.country_other').show();
        $('.address').show();
        $('.paypal').hide();
        if (isUS()) {
          $('.country_us').show();
          toggleByPayoutMethod();
          $('#terms-other').hide();
        } else {
          $('.country_us').hide();
          $('.country_other').show();
          if (method == 'check' || method == 'ach') {
            $('#payout_info_payout_method').val('wire');
          }
        }
      }

      if (isUS()) {
        $('#payout_info_payout_method option').attr('disabled', false);
      } else {
        $('#payout_info_payout_method option:nth(0)').attr('disabled', 'disabled')
        $('#payout_info_payout_method option:nth(1)').attr('disabled', 'disabled')
      }
    };
    var toggleByPayoutMethod = function() {
      if (isUS()) {
        var method = $('#payout_info_payout_method').val();
        if (method == 'ach' || method == 'wire') {
          $('.country_other').show();
        } else {
          $('.country_other').hide();
        }
        $('span.country_other').hide();
      } else {
        $('.country_other').show();
      }
    };
    var isUS = function() {
      return $('#payout_info_payment_country').val().match(/united states of america/i);
    };

    $('#payout_info_payment_country').change(toggleByCountry);
    $('#payout_info_payout_method').change(toggleByPayoutMethod);
    $('#payout_info_payout_method').change(toggleByCountry);
    toggleByCountry();
    $('#payout_info_account_type').change(function(){
      $('#payout_info_tax_id').val('');
      $('#payout_info_bank_name').val('');
      $('#payout_info_bank_address').val('');
      $('#payout_info_bank_account_number').val('');
      $('#payout_info_bank_routing_number').val('');
    });
    $('form').submit(function(){
      var billingName = $('#payout_info_billing_name').val().replace(/^ +/,'').replace(/ +$/,'').toLowerCase();
      var beneficiaryName = $('#payout_info_beneficiary_name').val().replace(/^ +/,'').replace(/ +$/,'').toLowerCase();
      if (beneficiaryName != billingName) {
        $('#flash_error').text('Your beneficiary name does not match your billing name. We need you to correct this in order to pay you.').show();
        return false;
      } else {
        $('#flash_error').hide();
        return true
      }
    });
