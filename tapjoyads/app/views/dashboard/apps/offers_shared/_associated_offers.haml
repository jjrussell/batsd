- description = "#{@offer.rewarded? ? 'Rewarded' : 'Non-rewarded'} #{@offer.featured? ? 'Featured' : 'Non-featured'} Associated Offers"
- if current_user.can_manage_account?
  = link_to('[Create Associated Offer]', new_statz_path(:id => @offer.id), :target => '_blank')

- dataset     = @offer.tapjoy_enabled_filtered_associated_offers.all
- dataset.unshift(@offer.main) unless @offer.main? || dataset.include?(@offer.main)
- offer_count = dataset.count
- if offer_count == 0
  %p#show_associated [0 #{description}]
- else
  #associated_offers.offer_list
    %a#show_associated{:href=>'#'} [#{offer_count} #{description}]
    #associated_list
      %a.close_button{:href=>'#'} x
      %h3 Associated Offers
      %table
        %tbody
          %tr
            %th Name
            %th Suffix
            %th Active
          - dataset.each do |offer|
            %tr{:class => [cycle('odd','even'), offer.user_enabled? ? 'enabled' : 'disabled'], :id => "offer_row_#{offer.id}" }
              %td= offer.name
              %td.suffix= edit_offer_link_for(offer)
              %td
                .toggle-bg
                  %input{:type => "checkbox", :checked => offer.user_enabled?, :offer_id => offer.id, :url => toggle_app_offer_path(:id => offer.id, :app_id => @app.id) }
                  %label.on On
                  %label.off Off
                  %span.switch

- if current_user.can_manage_account?
  - dataset     = @offer.tapjoy_disabled_filtered_associated_offers.all
  - dataset.unshift(@offer.main) unless @offer.main? || @offer.main.tapjoy_enabled? || dataset.include?(@offer.main)
  - offer_count = dataset.count
  - if offer_count == 0
    %p#show_disabled [0 Tapjoy Disabled #{description}]
  - else
    #disabled_offers.offer_list
      %a#show_disabled{:href=>'#'} [#{offer_count} Tapjoy Disabled #{description}]
      #disabled_list
        %a.close_button{:href=>'#'} x
        %h3 Tapjoy Disabled Offers
        %table
          %tbody
            %tr
              %th Name
              %th Suffix
            - dataset.each do |offer|
              %tr{:class => [cycle('odd','even')], :id => "offer_row_#{offer.id}" }
                %td= offer.name
                %td= edit_offer_link_for(offer, false)

- content_for :page_javascript do
  :plain
    $('#show_associated, #associated_offers .close_button').click(function() {
      $('#associated_list').slideToggle();
      return false;
    });

    $('#show_disabled, #disabled_offers .close_button').click(function() {
      $('#disabled_list').slideToggle();
      return false;
    });

    $('#associated_offers input').click( function(event) {
      var row_id = "#offer_row_" + $(event.target).attr('offer_id');
      var anchor = $(row_id + ' td.suffix').html();

      $(this).prop("disabled", true);
      $(row_id + ' td.suffix').html('<img src="/assets/images/colorbox/loading.gif" alt="loading" />');
      $(event.target).siblings().addClass('loading');

      $.post($(this).attr('url'), {"user_enabled" : $(this).prop("checked")}, function(){
        $(row_id).toggleClass('disabled')
      })
      .fail (function() {
        $(event.target).prop("checked", !$(event.target).prop("checked"))
      })
      .always (function () {
        $(event.target).prop("disabled", false);
        $(row_id + ' td.suffix').html(anchor);
        $(event.target).siblings().removeClass('loading');
      })
    })

