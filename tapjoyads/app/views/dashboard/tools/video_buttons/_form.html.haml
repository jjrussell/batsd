= form_for [ :tools, @video_offer, @video_button ], :html => { :class => 'tjform' } do |f|
  %table
    %tr
      %th
        = f.label :name
        #help_name.help ?
      %td
        = f.text_field :name, :size => 50
        = error_message_on @video_button, :name
        = f.hidden_field :video_offer_id
    %tr
      %th
        = f.label :offer
        #help_item.help ?
      %td
        = f.select :tracking_source_offer_id, formatted_offers_for_tracking(@video_offer.available_trackable_offers(@video_button)), {:selected => "#{@video_button.tracking_offer.source_offer_id if @video_button.tracking_offer.present?}"}
        = error_message_on @video_button, :tracking_offer
    %tr
      %th
        = f.label :ordinal
        #help_ordinal.help ?
      %td
        = f.text_field :ordinal, :size => 50
        = error_message_on @video_button, :ordinal
    %tr
      %th
        = f.label :enabled
        #help_enabled.help ?
      %td
        = f.check_box :enabled, :checked => @video_button.read_attribute(:enabled)
        = error_message_on @video_button, :enabled
    %tr
      %td{ :colspan => 2 }= f.submit @video_button.new_record? ? 'Create Video Button' : 'Update Video Button'

%p{ :style => 'clear: left' }
  = link_to 'Back to Buttons', tools_video_offer_video_buttons_path(@video_offer.id)
.hidden
  #help_name_content{ :name => 'Name' } The text appearing on the button. Maximum 20 characters.
  #help_item_content{ :name => 'Item' } The offer this button uses for link generation and tracking.
  #help_rewarded_content{ :name => 'Rewarded' } Mark this button as a Rewarded Install action. These actions will not display on iOS devices.
  #help_ordinal_content{ :name => 'Ordinal' } Priority of the button, the smaller the ordinal, the higher the priority. (Integer only)
  #help_enabled_content{ :name => 'Enabled' } Only enabled button will be shown by the end of the video. Permit at most 2 enabled buttons.
