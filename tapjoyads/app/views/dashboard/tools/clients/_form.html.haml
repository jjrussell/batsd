= form_for [ :tools, @client ], :html => { :class => 'tjform', :multipart => false } do |f|
  %table
    %tr
      %th= f.label :name
      %td= f.text_field :name, :size => 42
      %td= error_message_on @client, :name
    %tr
      %th= f.label :payment_type
      %td= f.text_field :payment_type, :size => 20
      %td= error_message_on @client, :payment_type
    %tr
      %td{ :colspan => 2 }= f.submit 'Save'
