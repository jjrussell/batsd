%h3= I18n.t('text.currency_sale.active_sale_header')
- if @active_currency_sales.any?
  %table
    %tr
      %th.wide= I18n.t('text.currency_sale.start_time')
      %th.wide= I18n.t('text.currency_sale.end_time')
      %th.wide= I18n.t('text.currency_sale.multiplier')
      %th.small= I18n.t('text.currency_sale.message_enabled')
      %th.wide= I18n.t('text.currency_sale.message')
      %th.small &nbsp;
      %th.small &nbsp;
    - for active_currency_sale in @active_currency_sales
      %tr
        %td.wide= active_currency_sale.start_time.to_s :mdy_ampm
        %td.wide= active_currency_sale.end_time.to_s :mdy_ampm
        %td.wide= active_currency_sale.multiplier
        %td.small= active_currency_sale.message_enabled
        - if active_currency_sale.message_enabled?
          %td.wide= active_currency_sale.message.present? ? active_currency_sale.message : I18n.t('text.currency_sale.sale_default_message', :multiplier => active_currency_sale.multiplier, :currency_name => @currency.name)
        - else
          %td.wide= I18n.t('text.currency_sale.no_message_lightbox')
        - if permitted_to?(:edit, :dashboard_currency_sales)
          %td.small= link_to I18n.t('text.shared.edit'), edit_app_currency_currency_sale_path(:id => active_currency_sale.id, :currency_id => @currency.id, :app_id => @app.id)
          %td.small= link_to I18n.t('text.shared.delete'), app_currency_currency_sale_path(:id => active_currency_sale.id, :currency_id => @currency.id, :app_id => @app.id), :method => :delete, :confirm => 'Are you sure?'
- else
  %h4= I18n.t('text.currency_sale.no_active_sale')
