- @page_title = 'Unavailable Offer'


.pillow.big-msg.m20
  = t('text.unavailable_offer.message', :offer => @offer.name)
  %br
  %br

  - if @offer.item_type == 'App'
    .primary{ :onclick => @destination_url }= t('text.unavailable_offer.optional_message', :offer => @offer.name)

- content_for :page_styles do
  :plain
    #main {
      padding-bottom: 15px;
      font-size: 115%;
    }

    .pillow {
      background: white;
      /* Old browsers */
      background: -moz-linear-gradient(top, white 0%, #fcfcfc 25%, #f7f7f7 75%, #f0f0f0 100%);
      /* FF3.6+ */
      background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, white), color-stop(25%, #fcfcfc), color-stop(75%, #f7f7f7), color-stop(100%, #f0f0f0));
      /* Chrome,Safari4+ */
      background: -webkit-linear-gradient(top, white 0%, #fcfcfc 25%, #f7f7f7 75%, #f0f0f0 100%);
      /* Chrome10+,Safari5.1+ */
      background: -o-linear-gradient(top, white 0%, #fcfcfc 25%, #f7f7f7 75%, #f0f0f0 100%);
      /* Opera 11.10+ */
      background: -ms-linear-gradient(top, white 0%, #fcfcfc 25%, #f7f7f7 75%, #f0f0f0 100%);
      /* IE10+ */
      background: linear-gradient(top, white 0%, #fcfcfc 25%, #f7f7f7 75%, #f0f0f0 100%);
      /* W3C */
      filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='white', endColorstr='#f0f0f0',GradientType=0 );
      /* IE6-9 */
      border-radius: 6px;
      box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
      border: 1px solid #bbb;
      padding: 15px; 
     
    }
    .primary {
      background: #ffc000;
      /* Old browsers */
      background: -moz-linear-gradient(top, #ffc000 0%, #ffb300 25%, #ff9200 75%, #ff8600 100%);
      /* FF3.6+ */
      background: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #ffc000), color-stop(25%, #ffb300), color-stop(75%, #ff9200), color-stop(100%, #ff8600));
      /* Chrome,Safari4+ */
      background: -webkit-linear-gradient(top, #ffc000 0%, #ffb300 25%, #ff9200 75%, #ff8600 100%);
      /* Chrome10+,Safari5.1+ */
      background: -o-linear-gradient(top, #ffc000 0%, #ffb300 25%, #ff9200 75%, #ff8600 100%);
      /* Opera 11.10+ */
      background: -ms-linear-gradient(top, #ffc000 0%, #ffb300 25%, #ff9200 75%, #ff8600 100%);
      /* IE10+ */
      background: linear-gradient(top, #ffc000 0%, #ffb300 25%, #ff9200 75%, #ff8600 100%);
      /* W3C */
      filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ffc000', endColorstr='#ff8600',GradientType=0 );
      /* IE6-9 */
      border: 1px solid #d67810;
      border-bottom: 1px solid #c06a0a;
      box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.4), 0 1px 0 rgba(0, 0, 0, 0.1); 
      cursor: pointer;
      padding: 10px;
      border-radius: 4px;
      color: #fff;
      text-shadow: 0 -1px 0 rgba(0,0,0, .3);
      
    }
    
    .primary:active {
      background: #d67810;
      box-shadow: inset 0 1px 4px rgba(0, 0, 0, 0.4), 0 1px 0 rgba(255, 255, 255, 0.1); 
    }