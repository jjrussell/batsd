- content_for :page_head, stylesheet_link_tag('about_us')
- content_for :page_head, stylesheet_link_tag('team')

#about_us
  #left
    = render :partial => 'homepage/sub_nav'
  #right
    %img.header{:src => "/images/meet_the_team.png"}/
    - @employees.each do |employee|
      #user
        .teampic= image_tag employee.get_photo_url, :alt => employee.full_name
        %span.name
          = employee.full_name
        %span.title
          = employee.title
        %p.about
          = employee.biography
          %a.href{:href => "http://www.google.com"}
            [Full Bio]
          #questions
            .question
              %span
                Secret superpower
              %p
                = employee.superpower
            .question
              %span
                Currently playing
              %p
                = employee.current_games
            .question
              %span
                Weapon of choice
              %p
                = employee.weapon
      .divider
.clear