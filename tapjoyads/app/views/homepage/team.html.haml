- @page_title = "Meet the Team"

- content_for :page_head, stylesheet_link_tag('about_us')
- content_for :page_head, stylesheet_link_tag('team')

#about_us
  #left
    = render :partial => 'homepage/sub_nav'
  #right
    %img.header{:src => "/images/meet_the_team.png"}/
    - @employees.each do |employee|
      #user
        .teampic= image_tag(h(employee.get_photo_url), :alt => h(employee.full_name))
        %span.name
          = h(employee.full_name)
        %span.title
          = h(employee.title)
        .about
          %p.biosmall
            - if (employee.biography.length > 140)
              = truncate(h(employee.biography), :length => 140)
              %a.showbio{:href => "javascript:;"}
                [Full Bio]
            - else
              = h(employee.biography)
          %p.biolarge
            = h(employee.biography)
            %a.showbio{:href => "javascript:;"}
              [Short Bio]
          #questions
            .question
              %span.header
                Secret superpower
              %span.answer
                = h(employee.superpower)
            .question
              %span.header
                Currently playing
              %span.answer
                = h(employee.current_games)
            .question
              %span.header
                Weapon of choice
              %span.answer
                = h(employee.weapon)
      .divider
.clear
