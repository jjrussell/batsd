- content_for :page_head, stylesheet_link_tag('about_us')
- content_for :page_head, stylesheet_link_tag('contact')
- if @error_msg
  #error
    %span
      <b>Error!</b>
      = @error_msg
- elsif params[:info].present?
  #notice
    %span
      <b>Thanks!</b> Someone from our team will be in touch shortly
#about_us
  #left
    = render :partial => 'homepage/sub_nav'
  #right
    %img.header{:src => "/images/contact_tapjoy.png"}/
    %img#map{:src => "/images/map.jpg"}/
    #contact_info
      .info_box
        %h2
          Mailing Address
        %p
          111 Sutter St<br />13th Floor<br />San Francisco, CA 94104
      .info_box
        %h2
          Call/Fax Us
        %p
          Telephone: 415 766 6900<br />Fax: 415 296 9007
      .info_box
        %h2
          Email Us
        %p
          info [at] tapjoy.com<br />support [at] tapjoy.com
    %h2
      Support / Info Form
      - form_for('info', :url => {:action => 'contact'}, :html => {:id => 'contact_form'}) do |f|
        %div
          = f.label :name, 'Your name'
          = f.text_field :name
          = f.label :email, 'Your email address'
          = f.text_field :email
          = f.label :reason, 'Reason for inquiry'
          = f.select :reason, options_for_select(['Comment', 'Complaint']), :include_blank => 'Select one'
        #details
          = f.label :details
          = f.text_area :details, :rows => 5
        = image_submit_tag 'site/submit_btn.gif', :class => 'submit'
.clear
