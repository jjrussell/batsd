%h1 Tapjoy SDKs
%dt
  %dd
    %h3 iOS Library (#{@iphone_version})
    %ul
      %li
        - sdk_link 'iOS Advertiser Library', 'iphone-adv', false
      %li
        - sdk_link 'iOS Publisher Library', 'iphone-pub'
      %li
        - sdk_link 'iOS Publisher Library (+ Virtual Goods)', 'iphone-vg'

    %h3 Android Library (#{@android_version})
    %ul
      %li
        - sdk_link 'Android Advertiser Library', 'android-adv', false
      %li
        - sdk_link 'Android Publisher Library', 'android-pub'
      %li
        - sdk_link 'Android Publisher Library (+ Virtual Goods)', 'android-vg'

    %h3 Third-party Plugins
    %ul
      %li
        - sdk_link 'Unity Plugin for iOS', 'iphone-unity'
      %li
        - sdk_link 'Unity Plugin for Android', 'android-unity'

- content_for :page_head, stylesheet_link_tag('facebox')
- content_for :included_javascripts, javascript_include_tag('facebox')
- content_for :page_javascript do
  :plain
    $(document).ready(function($) {
      $('a[rel*=facebox]').facebox({
        closeImage : '/images/closelabel.png'
      });
    });
