- @page_title = "Daily #{@currencies[@todays_day_number - 1].name} Bonus"

.container
  .content
    .top
      .headbg
        %h4
          = "Daily #{@currencies[@todays_day_number - 1].name} Received!"
    .main
      %ul.days.clearfix
        - @reengagement_offers.each do |r|
          - if @todays_day_number > r.day_number
            %li.box.past
              .credits.past
                %h4
                  = "+ #{r.reward_value}"
              .day.past
              .date.past
                %h4
                  = "Day #{r.day_number}"
          - elsif @todays_day_number == r.day_number
            %li.box.current
              .credits.current
                %h4
                  = "+ #{r.reward_value}"
              .day.current
              .date.current
                %h4
                  = "Day #{r.day_number}"
          - else
            %li.box
              .credits
                %h4
                  = "+ #{r.reward_value}"
              .day
              .date
                %h4
                  = "Day #{r.day_number}"
      .textc
        = "#{@reengagement_offers[@todays_day_number - 1].instructions}"
      %a{:href => "javascript:self.close();"}
        %span.button
          OK
    .footer.clearfix
      = image_tag @app_icon_url, :alt => "App Icon", :name => "App Icon", :height => "50", :id => "app_icon", :class => "app_icon floatl"

      %h5{:name => "Partner Name", :id => "partner_name", :class => "floatl"}
        = "by #{@partner_name}"

      %a{:href => WEBSITE_URL}
        = image_tag "reengagement_rewards/logo-footer.png", :alt => "Tapjoy Logo", :name => "Tapjoy Logo", :height => "50", :id => "Insert Logo", :class => "floatr"

- content_for :page_styles do
  = stylesheet_link_tag("reengagement_rewards/style")
