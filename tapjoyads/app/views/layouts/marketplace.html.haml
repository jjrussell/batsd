!!! 5

%html{ :class => "#{HeaderParser.device_type(request.headers['user-agent'])} device mobile no-os no-touch no-hd" + (current_gamer.nil? ? ' nologin' : '') }
  %head
    %meta{ 'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8' }
    %meta{ :name => 'viewport', 'content' => 'width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no' }
    %meta{ :name => 'apple-mobile-web-app-status-bar-style', 'content' => 'black' }
    %meta{ :name => 'description', :content => t('text.games.meta_description') }
    %meta{ :name => 'keywords', :content => t('text.games.meta_keywords') }
    %meta{ :property => 'og:image', :content => "https://www.tapjoy.com/images/ic_launcher_96x96.png" }
    :javascript
      window._tjStartTime = new Date().getTime();

    %link{ :rel => 'shortcut icon', :href => '/favicon.ico', :content => 'image/vnd.microsoft.icon' }
    %link{ :rel => 'apple-touch-icon-precomposed', :href => '/images/tjgames-114x114.png' }
    %link{ :rel => 'publisher', :href => 'https://plus.google.com/b/116280135840952950839/' }

    %title= @page_title.blank? ? 'Tapjoy Marketplace' : "#{@page_title} - Tapjoy"

    = yield :early_load

    = embed_js "marketplace/cache"
    = embed_js "marketplace/preload"

    - css_cache "marketplace/locale/#{I18n.locale.to_s}.css", true if ['de', 'es', 'fr', 'ja', 'ko', 'zh'].include? I18n.locale.to_s
    - css_cache 'marketplace/style-master', true

    = yield :preload_images

    /[if lt IE 9]
      :javascript
        stash.require("#{path_for('marketplace/helpers/html5', 'js', false)}");

    /[if IE 8]
      :javascript
        stash.require("#{path_for('marketplace/theme/tjm/ie', 'css', false)}");

    = yield :page_head

    :javascript
      stash.require(#{css_requires.to_json}, function () {
        (function show() {
          var el = document.getElementById('tapjoy');
          el ? el.style.display = 'block' : setTimeout(show, 50);
        }());
      });

      // request images file separately
      stash.require('#{path_for('marketplace/theme/tjm/images', 'css', false)}');

    %script{ :id => "analytics-goes-here" }
  %body
    - if @load_facebook == true
      #fb-root{ 'data-fb-options' => {:appId => Facebooker2.app_id, :locale => 'en_US'}.to_json }

    %noscript
      %style{:type => "text/css", :media => "screen"}
        :plain
          .noscript_msg {
            margin: 50px 0;
            width: 100%;
            text-align: center;
            font-family: Helvetica, sans-serif;
            font-size: 1.4em;
          }
      .noscript_msg
        = t('text.games.no_javascript')

    #tapjoy{:style => 'display: none;'}
      = render :partial => 'games/shared/header'

      - flash.each do |name, msg|
        .flash.hidden{ :id => "flash-#{name}" }
          = msg

      = yield

      = render 'games/shared/submenu'

      = yield :above_footer

      = render 'games/shared/footer'

    :javascript
      window.ENVIRONMENT = "#{Rails.env}";


    - js_cache 'tjm', true
    - js_cache! games_translations_path(:filename => get_locale_filename), true

    :javascript
      stash.require(#{js_requires.to_json}, function (stash) {
        #{yield :page_javascript}
      });

    - if Rails.env.production?
      :javascript
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-25098478-2']);
        _gaq.push(['_trackPageview']);

        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();


    -# keep this as the last call in the file
    :javascript
      window._tjHtmlDone = new Date().getTime();
