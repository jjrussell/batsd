!!! Strict
%html
  %head
    %title Tapjoy :: Fueling Great Apps - Tapjoy in the Press
    %meta{ 'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8' }
    %link{ :rel => 'shortcut icon', :href => '/favicon.ico' }
    = stylesheet_link_tag 'reset', 'common', 'about_us', 'press', 'facebox'
    %style{ :type => 'text/css' }
      = yield :page_styles
    = yield :page_head
  %body
    #header_wrapper
      #header
        %a#logo{:href => "/"}
        #nav
          %a#nav_home.nav_link{:href => "/"}
          %a#nav_developers.nav_link{:href => "/site/app_developers"}
          %a#nav_advertisers.nav_link{:href => "/site/advertisers"}
          %a#nav_about.nav_link{:href => "/site/about_us"}
    #content_wrapper
      #content
        %a#client_login{:href => "/login"}
        .clear
        #about_us
          #left
            = render :partial => 'homepage/sub_nav'
            = render :partial => 'homepage/press_feed'
          #right
            %h1
              %strong= @press_title
            %p
              - if @press_subtitle
                %i= @press_subtitle
            = yield
            = yield :additional_info

      .clear
    = render :partial => 'homepage/footer'
