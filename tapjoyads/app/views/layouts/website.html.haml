!!!

%html
  %head
    %meta{ 'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8' }
    %title
      = @page_title.blank? ? 'Tapjoy' : "#{@page_title} - Tapjoy"
    = stylesheet_link_tag 'website'
    = yield :included_stylesheets
    %style
      = yield :page_styles
    
  %body
    #content
      #user_nav
        - if current_user
          Welcome, #{current_user.username}.
          = link_to 'Tools', tools_path
          |
          = link_to 'Logout', logout_path
        - else
          = link_to 'Login', login_path
      
      - flash.each do |name, msg|
        .flash{ :id => "flash_#{name}" }= msg
      
      = yield
      
      = javascript_include_tag 'jquery-1.4.1.min'
      = yield :included_javascripts
        
      %script{ :type => 'text/javascript', :charset => 'utf-8' }
        = yield :page_javascript
