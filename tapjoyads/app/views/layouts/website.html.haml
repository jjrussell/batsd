!!!

%html
  %head
    %meta{ 'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8' }
    %title Tapjoy.com
    = stylesheet_link_tag 'website'
    = yield :included_stylesheets
    = javascript_include_tag 'jquery-1.4.1.min'
    %script{ :type => 'text/javascript', :charset => 'utf-8' }
      jQuery.noConflict();
    = javascript_include_tag 'prototype'
    
  %body
    #content
      #user_nav
        - if current_user
          Welcome, #{current_user.username}.
          = link_to 'Tools', tools_path
          |
          = link_to 'Change Password', edit_user_path(:current)
          |
          = link_to 'Logout', logout_path
        - else
          = link_to 'Login', login_path
      
      - flash.each do |name, msg|
        .flash{ :id => "flash_#{name}" }= msg
      
      = yield
      
      = yield :included_javascripts
      
      %script{ :type => 'text/javascript', :charset => 'utf-8' }
        = yield :page_javascript
