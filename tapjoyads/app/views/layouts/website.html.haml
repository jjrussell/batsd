!!!

%html
  %head
    %meta{ 'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8' }
    %title
      = @page_title.blank? ? 'Tapjoy' : "#{@page_title} - Tapjoy"
    = stylesheet_link_tag 'website', 'jquery-ui-1.8.2.custom', 'themes/blue/style'
    %style{ :type => 'text/css' }
      = yield :page_styles
    = yield :page_head
    
  %body
    #top_nav
      .right
        - if current_user
          = current_user.username
          |
          - if permitted_to?(:index, :home)
            = link_to('Partner Home', home_index_path)
            |
          = link_to('Logout', logout_path)
        - else
          = link_to('Member Login', login_path)
      .clear
    
    - flash.each do |name, msg|
      .flash{ :id => "flash_#{name}" }= msg
    
    #content
      = yield
      
    = javascript_include_tag 'jquery-1.4.2.min', 'jquery-ui-1.8.2.custom.min', 'jquery.tablesorter'
    = yield :included_javascripts
      
    %script{ :type => 'text/javascript', :charset => 'utf-8' }
      = yield :page_javascript
