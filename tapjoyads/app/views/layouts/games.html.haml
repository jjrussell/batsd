!!! 5

%html
  %head
    %meta{ 'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8' }
    %meta{ 'name' => 'viewport', 'content' => 'width=device-width; initial-scale=1.0; maximum-scale=1.0; user-scalable=no;' }
    %meta{ 'name' => 'apple-mobile-web-app-status-bar-style', 'content' => 'black' }

    %link{ :rel => 'shortcut icon', :href => '/favicon.ico', :content => 'image/vnd.microsoft.icon' }
    %link{ :rel => 'apple-touch-icon-precomposed', :href => '/images/tjgames-114x114.png' }
    %link{ :rel => 'publisher', :href => 'https://plus.google.com/b/116280135840952950839/' }

    %title= @page_title.blank? ? 'Tapjoy' : "#{@page_title} - Tapjoy"

    = stylesheet_link_tag("games/reset")
    = stylesheet_link_tag("games/base")
    = stylesheet_link_tag("games/button")
    = yield :styles

    %script{ :type => 'text/javascript', :charset => 'utf-8', :src => games_translations_path(:language_code => I18n.locale) }
    = javascript_include_tag("games/src/tjg.jquery-1.6.2.min.js")
    = javascript_include_tag("games/src/i18n")
    = javascript_include_tag("games/src/marketplace")
    = yield :page_head

  %body{"data-env" => "#{Rails.env}"}
    %noscript
      .noscript_msg
        Please go into your browser settings and enable JavaScript to continue using Tapjoy.
    .main
      .header.tj-red-gradient
        .headerwrap
          .wrap
            =link_to "Gamer", games_gamer_url if current_gamer
            .logo=image_tag "e.gif"
            .nav-icon=image_tag "e.gif"
        .subhead
          .wrap
            =yield :subhead

      .content
        .contentwrap
          .wrap
            = yield
