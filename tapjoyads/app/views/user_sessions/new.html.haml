- @page_title = 'Login'

%h1 Login

- form_for @user_session do |f|
  = f.error_messages
  .field
    = f.label :username
    = f.text_field :username
  .field
    = f.label :password
    = f.password_field :password
  .field
    = f.submit 'Login'

- content_for :page_javascript do
  :plain
    $(document).ready(function() {
      $('#user_session_username').focus();
    });
