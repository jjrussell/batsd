- @page_title = "Last run times for offer: #{@offer.name}"

.icon= image_tag(@offer.get_icon_url, :size => '56x56')
%h1= @offer.name

.clear

%table
  %tr
    %th Device
    %th UDID
    %th Last run time
  - @udid_map.each do |udid, device|
    %tr
      %td= device
      %td= udid
      %td= @last_run_times[udid]

- content_for :page_styles do
  :plain
    .icon {
      float: left;
      padding-bottom: 20px;
    }
    
    .clear {
      clear: both;
    }
