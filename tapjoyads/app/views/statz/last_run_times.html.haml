- @page_title = "Last run times for offer: #{@offer.name_with_suffix}"

.icon= image_tag(@offer.get_icon_url, :size => '57x57')
%h1= @offer.name_with_suffix

%p As of: #{Time.zone.now.in_time_zone('Pacific Time (US & Canada)').to_s(:pub_ampm_sec)}

- form_tag(last_run_times_statz_path, :method => :get) do
  = label_tag(:other_udid, 'Other UDID')
  = text_field_tag(:other_udid, '', :size => 50)
  = submit_tag('Search')

%table
  %tr
    %th Device
    %th UDID
    %th Last run time
  - @udids_to_check.each do |hash|
    %tr
      %td= hash[:device_label]
      %td= hash[:udid]
      %td= hash[:last_run_time]

- content_for :page_styles do
  :plain
    .icon {
      float: left;
    }
    
    table {
      border-collapse: collapse;
    }
    
    th, td {
      border: 1px solid gray;
      padding: 5px;
    }
    
    form {
      padding-bottom: 20px;
    }
