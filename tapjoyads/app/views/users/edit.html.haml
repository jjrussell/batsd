- @page_title = 'Change Account Details'

%h1 Change account details

- form_for @user, :html => { :class => 'tjform' } do |f|
  %table
    %tr
      %th= f.label :email, 'Email Address'
      %td
        = f.text_field :email
        = error_message_on @user, :email
    %tr
      %th= f.label :password, 'New Password'
      %td
        = f.password_field :password
        = error_message_on @user, :password
    %tr
      %th= f.label :password_confirmation, 'Confirm New Password'
      %td
        = f.password_field :password_confirmation
        = error_message_on @user, :password_confirmation
    %tr
      %td{ :colspan => 2 }= f.submit
