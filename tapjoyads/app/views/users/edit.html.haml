- @page_title = 'Change Password'

%h1 Change Password

- form_for @user do |f|
  = f.error_messages
  .field
    = f.label :password, 'New Password'
    = f.password_field :password
  .field
    = f.label :password_confirmation, 'Confirm New Password'
    = f.password_field :password_confirmation
  .field
    = f.submit 'Change'
