- @page_title = 'Add new user'

%h1 Add new user

- form_for @user do |f|
  = f.error_messages :header_message => nil
  
  %table
    %tr
      %td= f.label :username, 'Login'
      %td= f.text_field :username, :size => 40
    %tr
      %td= f.label :email, 'Email Address'
      %td= f.text_field :email, :size => 40
    %tr
      %td= f.label :password, 'Password'
      %td= f.password_field :password, :size => 40
    %tr
      %td= f.label :password_confirmation, 'Confirm Password'
      %td= f.password_field :password_confirmation, :size => 40
    %tr
      %td{ :colspan => 2, :class => 'center' }= f.submit

- content_for :page_styles do
  :plain
    table {
      border-collapse: collapse;
    }
    
    td {
      padding: 3px 5px;
      text-align: right;
    }
    
    td.center {
      text-align: center;
    }
    
    .errorExplanation {
      background-color: #af1515;
      padding: 10px;
      -moz-border-radius: 5px;
      -webkit-border-radius: 5px;
      margin-bottom: 10px;
    }
    
    .fieldWithErrors {
      border: 3px solid #af1515;
      display: inline-block;
    }
